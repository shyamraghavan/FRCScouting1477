<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <DigitalClock android:id="@+id/digital_clock"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_gravity="center_horizontal" />

    <EditText android:id="@+id/text_entry_box"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:inputType="phone"
              android:hint="@string/text_entry_box_message" />

    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

        <Button android:id="@+id/text_submit_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/text_submit_button_text"
                android:layout_alignParentRight="true"
                android:onClick="buttonClick" />

        <Spinner android:id="@+id/state_spinner"
                 android:layout_height="wrap_content"
                 android:layout_width="200dp"
                 android:layout_toLeftOf="@id/text_submit_button"
                 android:layout_alignParentLeft="true" />

    </RelativeLayout>

</LinearLayout>